{% extends 'base.html.twig' %}

{% block title %}Collective{% endblock %}

{% block body %}
    <h1>Collective</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ collective.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ collective.name }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ collective.createdAt ? collective.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ collective.city }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('collective_index') }}">back to list</a>

    <a href="{{ path('collective_edit', {'id': collective.id}) }}">edit</a>

