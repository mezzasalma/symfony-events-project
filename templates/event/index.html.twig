{% extends 'base.html.twig' %}

{% block title %}Tous les events{% endblock %}

{% block body %}
<section>
  <h1></h1>
  {% endfor %}
</section>
<section class="grid grid-cols-3 gap-4">
  <h2 class="col-span-3 font-bold uppercase">Tous les évènements</h2>
  {% for event in events %}
    {% include "partials/card.html.twig" with {'event' : event} %}
  {% else %}
    <p>Il n'y a pas d'évènement programmé pour le moment</p>
  {% endfor %}
</section>
{% if is_granted('ROLE_ADMIN') %}
  <a href="{{ path('event_new') }}">Create new</a>
{% endif %}
{% endblock %}
