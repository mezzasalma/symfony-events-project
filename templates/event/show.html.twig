{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
  <h1>Event</h1>

  <table class="table">
    <tbody>
    <tr>
      <th>Id</th>
      <td>{{ event.id }}</td>
    </tr>
    <tr>
      <th>Name</th>
      <td>{{ event.name }}</td>
    </tr>
    <tr>
      <th>Date</th>
      <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
    </tr>
    <tr>
      <th>Location</th>
      <td>{{ event.location }}</td>
    </tr>
    <tr>
      <th>City</th>
      <td>{{ event.city }}</td>
    </tr>
    <tr>
      <th>Postal code</th>
      <td>{{ event.postalCode }}</td>
    </tr>
    <tr>
      <th>Price</th>
      <td>{{ event.price }}</td>
    </tr>
    <tr>
      <th>Number of places</th>
      <td>{{ event.numberPlaces }}</td>
    </tr>
    <tr>
      <th>Active</th>
      <td>{{ event.active ? 'Yes' : 'No' }}</td>
    </tr>
    </tbody>
  </table>

  <a href="{{ path('event_index') }}">back to list</a>
  {% if is_granted('ROLE_ADMIN') %}
    <button type="button">Participer</button>
  {% endif %}
  {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
    {{ include('event/_delete_form.html.twig') }}
  {% endif %}
{% endblock %}
